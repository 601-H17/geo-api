<div class="container">

  <h1 class="page-header view-header">Nouveau local</h1>

  <%= render 'shared/errors', obj: @classroom %>

  <div class="row">
    <div class="col-md-12">
      <%= form_for(@classroom, url: classroom_path(@classroom), method: :patch, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>

          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :nom %>
            </div>
            <div class="col-sm-8">
              <%= f.text_field :name, class: 'form-control', placeholder: 'Entrer le nom du local', autofocus: true %>
            </div>
          </div>

          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :description %>
            </div>
            <div class="col-sm-8">
              <%= f.text_area :description, class: 'form-control', placeholder: 'Entrer une description...' %>
            </div>
          </div>

          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :Étage %>
            </div>
            <div class="col-sm-8">
              <%= f.text_field :floor, class: 'form-control', placeholder: 'Étage' %>
            </div>
          </div>

          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :aile %>
            </div>
            <div class="col-sm-8">
              <%= f.text_field :wing, class: 'form-control', placeholder: 'Aile' %>
            </div>
          </div>

          <%= f.fields_for(:point, :html => {class: 'form-horizontal', role: 'form'}) do |b| %>

              <div class="form-group">
                <div class="control-label col-sm-2">
                  <%= b.label :lat, 'Lattitude' %>
                </div>
                <div class="col-sm-8">
                  <%= b.text_field :lat, class: 'form-control', placeholder: 'Entrer une lattitude' %>
                </div>
              </div>

              <div class="form-group">
                <div class="control-label col-sm-2">
                  <%= b.label :lng, 'Longitude' %>
                </div>
                <div class="col-sm-8">
                  <%= b.text_field :lng, class: 'form-control', placeholder: 'Entrer une longitude' %>
                </div>
              </div>

          <% end %>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= link_to 'Annuler', classrooms_path, class: 'btn btn-danger btn-sm', 'data-dismiss' => 'modal' %>
              <%= f.submit 'Sauvegarder', class: 'btn btn-primary btn-sm', 'data-dismiss' => 'modal' %>
            </div>
          </div>

      <% end %>
    </div>
  </div>

</div>