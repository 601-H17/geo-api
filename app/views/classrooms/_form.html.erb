<%= render 'shared/errors', obj: @classroom %>

<script>
  var classroom_id = <%= @classroom.id %>;
</script>

<div class="card-panel hoverable">

  <% if action_name == 'edit' %>
  <div class="row">
    <div class="col s12">
      <div class="col s12">
        <div class="input-field">
          <div class="chips chips-initial"></div>
          <label>Étiquettes</label>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="col s12">
      <%= form_for(@classroom, :html => {class: 'col s12', role: ''}) do |f| %>

          <div class="row">
            <div class="input-field col s4">
              <%= f.text_field :name, autofocus: true %>
              <%= f.label :nom %>
            </div>

            <div class="input-field col s4">
              <%= f.text_field :floor %>
              <%= f.label :Étage %>
            </div>

            <div class="input-field col s4">
              <%= f.text_field :wing %>
              <%= f.label :aile %>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <%= f.text_area :description, class: 'materialize-textarea' %>
              <%= f.label :description %>
            </div>
          </div>

          <%= f.fields_for(:point, :html => {class: 'col s12', role: 'form'}) do |b| %>

            <div class="row">
              <div class="input-field col s6">
                <%= b.text_field :lat %>
                <%= b.label :lattitude %>
              </div>

              <div class="input-field col s6">
                <%= b.text_field :lng %>
                <%= b.label :longitude %>
              </div>
            </div>

          <% end %>

          <%= link_to 'Annuler', classrooms_path, class: 'btn waves-effect waves-light red', 'data-dismiss' => 'modal' %>
          <%= f.submit (@classroom.new_record? ? 'Créer' : 'Mettre à jour'), class: 'btn waves-effect waves-light', 'data-dismiss' => 'modal' %>

      <% end %>
    </div>
  </div>
</div>
