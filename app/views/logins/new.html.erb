<h1 align="center">Connexion</h1>
<br>

<%= form_for(:logins, :html => {class: 'form-horizontal', role: 'form'}, url: login_path) do |f| %>

    <div class="form-group">
      <div class="control-label col-sm-2 col-sm-offset-2">
        <%= f.label :courriel %>
      </div>
      <div class="col-sm-4">
        <%= f.email_field :email, class: 'form-control', placeholder: 'courriel@domaine.com' %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2 col-sm-offset-2">
        <%= f.label :mot_de_passe %>
      </div>
      <div class="col-sm-4">
        <%= f.password_field :password, class: 'form-control', autocomplete: 'off' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-10">
        <%= f.submit 'Connexion', class: 'btn btn-primary btn-sm' %>
      </div>
    </div>

<% end %>