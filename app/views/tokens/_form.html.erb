<%= render 'shared/errors', obj: @token %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@token, url: tokens_path(@token), :html => {class: 'form-horizontal', role: 'form'}) do |f| %>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :nom_de_la_clé %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :name, class: 'form-control', placeholder: 'nom', autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= link_to 'Annuler', tokens_path, class: 'btn btn-danger btn-sm' %>
            <%= f.submit ('Générer'), class: 'btn btn-primary btn-sm' %>
          </div>
        </div>

    <% end %>
  </div>
</div>