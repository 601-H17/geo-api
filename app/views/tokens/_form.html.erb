<%= render 'shared/errors', obj: @token %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@token, url: tokens_path(@token), :html => {class: '', role: 'form'}) do |f| %>

        <div class="row">
          <div class="group input-field col s12">
            <%= f.text_field :name, class: 'validate', autofocus: true %>
            <label>Nom de la clé</label>
          </div>
        </div>
        <div class="row">
          <div>
            <%= link_to 'Annuler', tokens_path, class: 'btn' %>
            <%= f.submit ('Générer'), class: 'btn' %>
          </div>
        </div>

    <% end %>
  </div>
</div>