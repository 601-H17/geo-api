<%= render 'shared/errors', obj: @token %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@token, :url => tokens_path(@token), :html => {class: 'form-horizontal', role: 'form'}) do |f| %>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :name %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :name, class: 'form-control', placeholder: 'API key name', autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= link_to 'Cancel', tokens_path, class: 'btn btn-danger btn-sm' %>
            <%= f.submit 'Generate', class: 'btn btn-primary btn-sm' %>
          </div>
        </div>

    <% end %>
  </div>
</div>