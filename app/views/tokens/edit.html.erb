<div class="container">
  <h1 class="center-align thin">Modifier</h1>

  <%= render 'shared/errors', obj: @token %>
  <div class="card-panel hoverable">
    <div class="row">
      <div class="col s12">
        <%= form_for(@token, url: token_path(@token), method: :patch, :html => {class: 'form-horizontal'}) do |f| %>

            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :name, class: 'validate', autofocus: true %>
                <label>Nom de la cl√©</label>
              </div>
            </div>
            <div class="">
              <div class="col s12">
                <%= link_to 'Annuler', tokens_path, class: 'btn waves-effect waves-light red' %>
                <%= f.submit 'Modifier', class: 'btn waves-effect waves-light' %>
              </div>
            </div>

        <% end %>
      </div>
    </div>
  </div>

</div>