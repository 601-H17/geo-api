<%= render 'shared/errors', obj: @map %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@map, url: upload_index_path(@map), :html => {class: 'form-horizontal', role: 'form'}) do |f| %>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :nom %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :name, class: 'form-control', placeholder: 'nom de la carte', autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :Étage %>
          </div>
          <div class="col-sm-8">
            <%= f.number_field :floor, class: 'form-control', placeholder: 'étage' %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :carte_actuelle %>
          </div>
          <div class="col-sm-8">
            <%= f.check_box :currentMap %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :carte %>
          </div>
          <div class="col-sm-8">
            <%= f.file_field :map %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= link_to 'Annuler', upload_index_path, class: 'btn btn-danger btn-sm' %>
            <%= f.submit ('Téléverser'), class: 'btn btn-primary btn-sm' %>
          </div>
        </div>

    <% end %>
  </div>
</div>