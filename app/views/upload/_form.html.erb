<%= render 'shared/errors', obj: @map %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@map, url: upload_index_path(@map), :html => {class: 'form-horizontal', role: 'form'}) do |f| %>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :name %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :name, class: 'form-control', placeholder: 'Map name', autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :map %>
          </div>
          <div class="col-sm-8">
            <%= f.file_field :map, class: '' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= link_to 'Cancel', upload_index_path, class: 'btn btn-danger btn-sm' %>
            <%= f.submit (@map.new_record? ? 'Accept' : 'Update'), class: 'btn btn-primary btn-sm' %>
          </div>
        </div>

    <% end %>
  </div>
</div>